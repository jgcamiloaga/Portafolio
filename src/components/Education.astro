---
const education = [
  {
    year: "2022 - 2027",
    title: "Ingeniería de Sistemas",
    school: "Universidad Tecnológica del Perú",
    description: "Especialización en desarrollo web y aplicaciones móviles. Participación en proyectos de innovación tecnológica.",
    delay: "delay-1"
  },
  {
    year: "2024",
    title: "Desarrollo Back-End",
    school: "Alura Latam",
    description: "Certificación en tecnologías Back-End modernas incluyendo java, spring boot y bases de datos.",
    delay: "delay-2"
  }
];
---

<section id="education" class="section fade-in-section" aria-labelledby="education-title">
  <div class="container">
    <h2 id="education-title" class="section-title scroll-animation from-top">EDUCACIÓN</h2>
    <div class="education-grid">
      {education.map(item => (
        <article class={`education-card scroll-animation from-left ${item.delay}`}>
          <div class="education-year">{item.year}</div>
          <h3 class="education-title">{item.title}</h3>
          <p class="education-school">{item.school}</p>
          <p class="education-description">{item.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>