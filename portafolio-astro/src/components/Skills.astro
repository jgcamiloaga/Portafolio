---
const skills = [
  { name: "HTML", icon: "/resources/img/skills/html-icon.png", level: 90, delay: "delay-1" },
  { name: "CSS", icon: "/resources/img/skills/css-icon.png", level: 85, delay: "delay-2" },
  { name: "JAVASCRIPT", icon: "/resources/img/skills/javascript-icon.png", level: 80, delay: "delay-3" },
  { name: "REACT", icon: "/resources/img/skills/react-icon.png", level: 60, delay: "delay-4" },
  { name: "PYTHON", icon: "/resources/img/skills/python-icon.png", level: 75, delay: "delay-1" },
  { name: "FLASK", icon: "/resources/img/skills/flask-icon.png", level: 60, delay: "delay-2" },
  { name: "MYSQL", icon: "/resources/img/skills/mysql-icon.png", level: 75, delay: "delay-3" },
  { name: "FIGMA", icon: "/resources/img/skills/figma-icon.png", level: 80, delay: "delay-4" },
  { name: "TAILWIND", icon: "/resources/img/skills/tailwind-icon.png", level: 65, delay: "delay-5" },
  { name: "JAVA", icon: "/resources/img/skills/java-icon.png", level: 80, delay: "delay-6" }
];
---

<section id="skills" class="section fade-in-section">
  <div class="container">
    <h2 class="section-title scroll-animation from-bottom">SKILLS</h2>
    <div class="skills-grid">
      {skills.map(skill => (
        <div class={`skill-card scroll-animation from-left ${skill.delay}`}>
          <div class="skill-logo">
            <img 
              src={skill.icon || "/placeholder.svg"} 
              alt={skill.name} 
              width="48" 
              height="48" 
              loading="lazy" 
            />
          </div>
          <div class="skill-name">{skill.name}</div>
        </div>
      ))}
    </div>
  </div>
</section>
