---
const socialLinks = [
  {
    href: "https://www.linkedin.com/in/jgcamiloaga/",
    label: "LinkedIn",
    ariaLabel: "Perfil de LinkedIn de Johann Camiloaga"
  },
  {
    href: "https://github.com/jgcamiloaga",
    label: "Github",
    ariaLabel: "Perfil de GitHub de Johann Camiloaga"
  },
  {
    href: "/cv/CV_JohannCamiloaga.pdf",
    label: "CV",
    ariaLabel: "Descargar CV de Johann Camiloaga en formato PDF",
    download: true
  }
];
---

<section id="start" class="section fade-in-section">
  <div class="container">
    <h1 class="glitch scroll-animation from-top" data-text="HELLO, I'M">
      HOLA, YO SOY
    </h1>
    <h2 class="name scroll-animation zoom-in delay-1">
      Johann Camiloaga
    </h2>
    <p class="title scroll-animation from-bottom delay-2">
      DESARROLLADOR DE SOFTWARE
    </p>
    <div class="redes-links scroll-animation fade delay-3">
      {socialLinks.map(link => (
        <a
          href={link.href}
          class="redes-link btn-link"
          target="_blank"
          rel="noopener"
          aria-label={link.ariaLabel}
          download={link.download}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</section>
